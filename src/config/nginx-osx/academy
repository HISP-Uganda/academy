proxy_cache_path  /var/cache/nginx  keys_zone=dhis:250m  inactive=1d;
# NOTE: make directory /var/cache_proxy_temp and chown -R it to nobody:wheel
proxy_temp_path /var/cache/proxy_temp;
proxy_redirect  off;
proxy_set_header  Host             $host;
proxy_set_header  X-Real-IP        $remote_addr;
proxy_set_header  X-Forwarded-For  $proxy_add_x_forwarded_for;

server {
  listen 80;
  client_max_body_size 100M;
  
  location /apps {
    proxy_pass  http://localhost/apps;
  }

  location /files {
    root       /Users/admin/www;
    autoindex  on;
  }

  location /docs {
    root  /Users/admin/www;
    index index.html;
  }

  location /portal {
    root  /Users/admin/www;
    index index.html;
  }

  location /moodle {
    root /Users/admin/www;
    try_files $uri $uri/ /index.php?q=$request_uri;
    index index.php index.html index.htm;

    rewrite ^/(.*\.php)(/)(.*)$ /$1?file=/$3 last;

    location ~ \.php$ {
      root /Users/admin/www;
      fastcgi_split_path_info ^(.+\.php)(/.+)$;
      fastcgi_pass unix:/var/run/php5-fpm.sock;
      include fastcgi_params;
      fastcgi_read_timeout 1000;
    }
  }

  location /dhis {
    proxy_pass http://localhost:8080/dhis;
    proxy_cache dhis;
  }

  location / {
    root  /Users/admin/www;
    index index.html;
  }
}
